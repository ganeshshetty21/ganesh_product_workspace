<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout
				pattern=" %d{DEFAULT} %5p [%t] %c{1}:%L - %replace{%m}{(?i)(\d{1,16})(\d{4})}{****$2}%n" />
		</Console>
		<File name="LogToFile" fileName="logs/app.log">
			<!-- <PatternLayout pattern="%d{DEFAULT} %5p [%t] %c{1}:%L - %replace{%msg}{(?i)(\d{1,16})(\d{4})(?=&lt;\/[\w:]*(TaxId|AcctId|CustId|Ssn|.*Number))|(\w{1,40})(?=&lt;\/[\w:]*Password)|(\d{6})(\d{4})(:)(\d{13})(\d{4})(:\d{1,5}:\d{1,5}:\w{1}:\d{1,5}:\w{1,20})(?=&lt;\/LineValue)}{******$2$6$7$9$10}%n" 
				Â  /> -->

			<PatternLayout
				pattern=" %d{DEFAULT} %5p [%t] %c{1} - %m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.ganesh" level="debug" additivity="false">
			<AppenderRef ref="LogToFile" />
			<AppenderRef ref="LogToConsole" />
		</Logger>
		<Logger name="org.springframework.boot" level="error"
			additivity="false">
			<AppenderRef ref="LogToConsole" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="LogToFile" />
			<AppenderRef ref="LogToConsole" />
		</Root>
	</Loggers>
</Configuration>